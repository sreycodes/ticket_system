<h1>Welcome to {{title}}</h1>

<h2>Get an entry by id</h2>
<form method="get" action="/tickets">
    <label for="id">ID:</label>
    <input type="number" name="id" value="">
    </br>
    <button class="btn" type="submit">Retrieve</button>
</form>

<h2>Insert an entry</h2>
<form method="post" action="/tickets">
	<label for="subject">Subject</label>
    <textarea id="subject" name="subject" rows="1"></textarea>
    </br>
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="4"></textarea>
    </br>
    <label for="email">Email</label>
    <input id="email" name="email" type="email" value=""/>
    </br>
    <button class="btn" type="submit">Insert</button>
</form>
